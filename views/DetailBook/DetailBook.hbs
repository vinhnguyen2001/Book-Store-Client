<div id="modal-mgs">
</div>
<div id="toast-msg"></div>

<div class="container">

    <div class="route-page">
        <a href="/homepage">Trang Chủ </a>>
        <a href="/{{brand}}">{{pack.category_name}}</a> >
        <a style="text-transform:capitalize">{{pack.product_name}}</a>
    </div>

    <div class="main__content content">

        <div class="content__left">
            <div class="carousel detail-container slide" id="carouselControls" data-ride="carousel">
                <div class="detail-img carousel-inner" id="detail-img">
                        {{!-- {{#each item.image}} --}}
                        
                        <div class="carousel-item active"> 
                            <img src="../../img/firstpic.jpg">
                        </div>
                        <div class="carousel-item"> 
                            <img src="../../img/secondpic.jpg">
                        </div>
                        {{!-- {{/each}} --}}
                        <a class="carousel-control carousel-control-prev" href="#carouselControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        </a>
                        <a class="carousel-control carousel-control-next" href="#carouselControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        </a>
                        
                </div>

                <div class="content__right--decription right--item">
                    <span style="text-transform:capitalize"><b>Mô tả </b></span>
                    <p>{{pack.description}}</p>
                </div>
            </div>
        </div>
        <div class="content__right">

            <div class="content__right--name right--item">
                 <span style="text-transform:capitalize"><b>Tên sách:</b>  {{pack.product_name}}</span>
            </div>
            <div class="content__right--author right--item">
                 <span style="text-transform:capitalize"><b>Tác giả: </b> {{pack.author_name}}</span>
            </div>
            <div class="content__right--stock right--item">
                 <span style="text-transform:capitalize"><b>Còn hàng: </b>  {{pack.stock}}  sản phẩm</span>
            </div>
            <div class="content__right--quantity right--item">
                 <span style="text-transform:capitalize"><b>Giá thành: </b>  <span style="color:rgb(235, 68, 68)">{{pack.price}} VNĐ</span></span>
            </div>
            <div class="content__right--button right--item" >
                 <button type="button" onclick="addItem(this)">
                    Mua Ngay
                </button>
                <div class="product_id" style="display:none">{{pack.product_id}}</div>

            </div>

           
            <div class="content__right--comment right--item">
                <div class="comment-input">
                    <span style="text-transform:capitalize"><b>Nhập bình luận tại đây </b></span>
                    <input type="text" id="cmt-content" name="comment">
                    <button type="submit" id="sendbtn"><i class="fa-solid fa-paper-plane"></i></button>
                </div>

                <div class="comment-items">
                    <div class="comment-item">
                        <div class="cmt-avatar">
                            <img src="../../img/firstpic.jpg" alt="avatar-photo">
                        </div>
                        <div class="cmt-msg">
                            <h4><b>Test Admin </b></h4>
                            <p>Sản phẩm tuyệt vời lắm ạ !</p>
                        </div>
                    
                    </div>
                    {{#each cmtPacks}}
                    <div class="comment-item">
                        <div class="cmt-avatar">
                            <img src="../../img/firstpic.jpg" alt="avatar-photo">
                        </div>
                        <div class="cmt-msg">
                            <h4><b>{{this.firstname}} {{this.lastname}} </b></h4>
                            <p>{{this.comment_body}}</p>
                        </div>
                    </div>
                        {{/each}}
                </div>
            </div>
        </div>

    </div>
</div>