<div id="modal-mgs">
</div>
<div class="container">
    
    <div class="display-filter">
        <form id="form-filter" action="/subject" method="post">
            <div class="select__price">
                <label class="choose-title">Giá sản phẩm </label> 
                <div class="select__price--content price__content">

                    <div class="range-slider">
                        <div class="progress"></div>
                        <div class="progress-shadow"></div>
                        <input type="range"  class="range-min" min="0" max="2000000" value="0" step="5000">
                        <input type="range"  class="range-max" min="0" max="2000000" value="2000000" step="5000">
                          
                    </div>
                    <div class="range-number">
                        <div class="min-value numberVal">
                            <input type="text" value="0 đ" disabled>
                        </div>
                        - &nbsp;
                        <div class="max-value numberVal">
                            <input type="text" value="2.000.000 đ"disabled>
                        </div>
                    </div>

                    {{!-- <input type="number" style="display:none" id="range-slider-min-input">
                    <input type="number" style="display:none" id ="range-slider-max-input"> --}}
                </div>
            </div>
            <div class="select__brand">
               <label class="choose-title" >SẮP XẾP </label> 
               <select type="text" class="form__add--brand" id="brand-filter" name="filter" style="width:100%;padding-left:1rem">
                    <option value="PD.product_id DESC"
                    {{#compareString filter "PD.product_id DESC"}} selected{{/compareString}}
                    >Mới nhất</option>
                    <option value="PD.product_id DESC"
                      {{#compareString filter "PD.product_id DESC"}} selected{{/compareString}}>Tên A - Z</option>
                    <option value="PD.price ASC"
                      {{#compareString filter "PD.price ASC"}} selected{{/compareString}}>Giá tiền tăng dần</option>
                    <option value="PD.price DESC"
                      {{#compareString filter "PD.price DESC"}} selected{{/compareString}}>Giá tiền giảm dần</option>
                </select>
            </div>
            <div class="btn-select"><button type="submit" class"btn">Lọc</button></div>
        </form>
    </div>

    <div class="display-product">
        <div class="title section-title">
        <h3 class="section-bestseller title secondary-title">CHỦ ĐỀ {{name_subject}}</h3>
        </div>
        <div class="product">
            {{#each packs}}
            <div class="product__item" onmouseover="showPurchasegoods(this)" onmouseout="hidePurchasegoods(this)">
                <div class="product__item--img img--bitis">
                    <img src="{{this.image_link}}" alt="photo1" width="100%">
                </div>
                <div class="product__name">
                    <a href="/book/{{this.product_id}}/detail">
                        <p class="p-name">{{this.product_name}}</p>
                    </a>
                </div>
    
                <div class="product__price">
                    {{this.price}} đ
                </div>
                <div class="product__buy btn" onclick="addItem(this)">
                    <button>
                        Thêm vào giỏ hàng 
                    </button>
                </div>
                <div class="product_id" style="display:none">{{this.product_id}}</div>
            </div>
            {{/each}}
             {{#compareInt flag 0}}

            <div id="notfound">
                <i class="fa-solid fa-triangle-exclamation"></i>
                <h2>
                    Không tìm thấy sản phẩm phù hợp 
                </h2>
            </div>
        {{/compareInt}}
        </div>


        <div class="product-pagination">
            <div class="pagination">
                {{#forN total_page}}
                <div class="page-item lower-item">
                    <a href="/subject/{{../id_subject}}/{{../name_subject}}?page={{this}}&filter={{filter}}&lowerPrice=${{lowerPrice}}&upperPrice={{upperPrice}}">
                    {{this}}</a>
                </div>
                {{/forN}}
            </div>
        </div>
    </div>

</div>
