
<div id="toast-msg"></div>
<div class="container">

    <div class="title section-title">
        <h3 class="section-bestseller title secondary-title">THÔNG TIN CÁ NHÂN</h3>
    </div>
    <div class="info-content">
    
        <div class="info-avatar">
            <div class="avatar-detail">
                <img src="../../img/firstpic.jpg" alt="avatar">
            </div>
            <div class="avatar-msg">
                Hello {{account.lastname}}. Have a nice day !
            </div>
        </div>
        <div class="info-detail">
            <form action="/account/update" method="post"class="form-update" >
            <div class="form-group">
                <label for="exampleInputEmail1">Họ</label>
                <input name="firstname" type="text" class="form-control" placeholder="Nguyễn" value="{{account.firstname}}">
            </div>
            <div class="form-group form-number">
                <label for="exampleInputEmail1">Tên</label>
                <input name="lastname" type="text" class="form-control" placeholder="Vinh" value="{{account.lastname}}">
            </div>
        <div class="form-info form-item">
            {{!-- <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input name="email" type="email" class="form-control" placeholder="nguyenvana@gmail.com">
            </div> --}}
            <div class="form-group form-number">
                <label for="exampleInputEmail1">Số điện thoại</label>
                <input name="phone" type="text" class="form-control" placeholder="0337430983" value="{{account.phone}}">
            </div>
        </div>
        <div class="form-group form-item">
            <label for="exampleInputEmail1">Địa chỉ</label>
            <input type="text" name="address" class="form-control" placeholder="KTX khu B - Đông Hòa Dĩ An"
            value="{{account.address}}">
        </div>
        <div class="form-select-add form-item">
            <div class="form-group">
                <label for="province ">Tỉnh - thành phố</label>
                <select name="province" class="form-select form-province" >
                    <option select="selected ">
                    {{#if account}}
                        {{account.province}}
                    {{else}}
                        Rỗng
                    {{/if}}
                    </option>
                </select>
            </div>
            <div class="form-group ">
                <label for="district ">Thành phố - huyện</label>
                <select name="district" class="form-select form-district ">
                    <option>
                        {{#if account.district}}
                        {{account.district}}
                        {{else}}
                        Rỗng
                        {{/if}}
                        </option>
                </select>
            </div>
            <div class="form-group form-wards ">
                <label for="ward ">Phường - xã</label>
                <select name="ward" class="form-select form-ward ">
                    <option>
                        {{#if account.ward}}
                        {{account.ward}}
                        {{else}}
                        Rỗng
                        {{/if}}</option>
                </select>
            </div>
        </div>
        </form>
        <div class="save-btn">
            <button type="submit" id="savebtn" data-toggle="modal" data-target="#comfirm">
                     Lưu thông tin
            </button>
        </div>
    
    </div>
   
    </div>
   
</div>


<div class="modal fade" id="comfirm" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content" style="border:none !important">
      <div class="modal-header">
        <h5 id="removeModalHead" class="modal-title" style="font-size: 20px;">Thông báo</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="border-color:red;">
        Bạn chắc chắn muốn lưu thông tin
      </div>
      <div class="modal-footer">
        <button id="save-confirm-btn"  class="btn btn-success"type="button" class="btn btn-light" style="font-size: 15px">Xác nhận</button>
        <button type="button" class="btn" style="font-size: 15px; background-color:#eee" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>


<script type = "text/javascript" >

    const saveButton = document.querySelector("#save-confirm-btn");
    const form = document.querySelector(".form-update");

   
    document.addEventListener('DOMContentLoaded', function() {
        saveButton.onclick = () => {
            form.submit();
        };
    });

</script>

